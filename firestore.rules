rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow authenticated users to read/write their own user document
    match /shop-users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Allow authenticated users to read promos
    match /Shop_Promo/{promoId} {
      allow read: if request.auth != null;
    }
    
    // Allow authenticated users to read banners
    match /shop_banners/{bannerId} {
      allow read: if request.auth != null;
    }
    
    // Allow authenticated users to read coupons
    match /shop_coupons/{couponId} {
      allow read: if request.auth != null;
    }
    
    // Allow authenticated users to read categories
    match /shop_categories/{categoryId} {
      allow read: if request.auth != null;
    }
    
    // Allow authenticated users to read products
    match /shop_products/{productId} {
      allow read: if request.auth != null;
    }
    
    // Allow authenticated users to manage their own cart
    match /shop-users/{userId}/cart/{itemId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
